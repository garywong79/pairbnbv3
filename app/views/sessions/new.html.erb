<div class="row">
   <div class="col-md-6 col-md-offset-3 text-center">


		<h1>Login</h1>

		<%= form_for :session, url: login_path do |f| %>

			 <%= render 'shared/errormes' %>

			<div class="form-group">
				<%= f.label :email%>
				<%= f.email_field :email%>
			</div>

			<div class="form-group">
				<%= f.label :password %>
				<%= f.password_field :password %>
			</div>


			<div class="actions">
				<%= f.submit "Login", class: "btn btn-primary" %>
			</div>
	</div>
</div>
			<% end %>