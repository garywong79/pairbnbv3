<h1>Edit your room</h1>


<%= form_for :list, url: lists_path do |f| %>
	
	<%= render 'shared/errormes' %>

	<div class="form-group" >
		<%= f.label :price %>
		<%= f.text_field :price %>
	</div>

	<div class="form-group" >
		<%= f.label :property_type %>
		<%= f.text_field :property_type %>
	</div>

	<div class="form-group" >
		<%= f.label :room_type %>
		<%= f.text_field :room_type %>
	</div>

	<div class="form-group" >
		<%= f.label :bathroom %>
		<%= f.number_field :bathroom %>
	</div>

	<div class="form-group" >
		<%= f.label :bedroom %>
		<%= f.number_field :bedroom %>
	</div>

	<div class="form-group" >
		<%= f.label :bed %>
		<%= f.number_field :bed %>
	</div>

	<div class="form-group" >
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>

	<div class="actions">
		<%= f.submit "Update", class: "btn btn-primary" %>
	</div>

<% end %>