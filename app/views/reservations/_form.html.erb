<% if logged_in?  %>
	
	<%= form_for [list,@reservation] do |f| %>
		<%= f.label :check_in_date %>
		<%= f.text_field :check_in_date %>
		<%= f.label :check_out_date %>
		<%= f.text_field :check_out_date%>
		<%= f.hidden_field :price, value: list.price %>
	<br>
	<%= f.submit "Book Now", class: "btn btn-primary" %>
	<% end %>
<% end %>

<script>
	$(function() {
		$('#reservation_check_in_date').datepicker({
			dateformat: 'dd-mm-yy'
		});
		$('#reservation_check_out_date').datepicker({
			dateformat: 'dd-mm-yy'
	});
});
</script>
